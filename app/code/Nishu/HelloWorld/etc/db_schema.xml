<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="nishu_contact_form" resource="default" engine="innodb" comment="Contact Form Table">
        <column name="id" xsi:type="int" nullable="false" identity="true" unsigned="true"/>
        <column name="name" xsi:type="varchar" nullable="false" length="255"/>
        <column name="email" xsi:type="varchar" nullable="false" length="255"/>
        <column name="message" xsi:type="text" nullable="true"/>
        <column name="created_at" xsi:type="timestamp" default="CURRENT_TIMESTAMP"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
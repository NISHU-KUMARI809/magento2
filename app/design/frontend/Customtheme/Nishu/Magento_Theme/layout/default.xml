<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
               <argument name="logo_file" xsi:type="string">images/banner.png</argument>
                <argument name="logo_img_width" xsi:type="number">300</argument>
                <argument name="logo_img_height" xsi:type="number">300</argument>
            </arguments>
            <!-- override the default magento logo with the custom logo  -->
        </referenceBlock>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="custom-footer-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">About Magento</argument>
                    <argument name="path" xsi:type="string">magento-about-page</argument>
                   
                </arguments>
            </block>
        </referenceBlock>
        <!-- add a custom link (about magento) in the footer  -->
    </body>
</page>
 